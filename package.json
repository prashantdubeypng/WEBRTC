{
  "name": "webrtc-app",
  "version": "1.0.0",
  "description": "WebRTC Video Calling Application",
  "scripts": {
    "start": "cd client && npm start",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd client && npm start",
    "start:frontend": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install:all": "npm install && cd client && npm install && cd ../frontend && npm install",
    "heroku-postbuild": "npm run install:all && npm run build"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "react-router-dom": "^7.8.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
